{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>koki-develop/renovate-config"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^\\.chezmoidata\\.toml$"],
      "matchStrings": ["version\\s*=\\s*\"(?<currentValue>.*?)\"\\s*$"],
      "depNameTemplate": "yuru7/HackGen",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "fileMatch": ["^mise\\.toml$"],
      "matchStrings": [
        "\"go:github\\.com/(?<depName>[^/]+/[^/]+)(?:/[^\"]+)?\"\\s*=\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "github-tags",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "fileMatch": ["^mise\\.toml$"],
      "matchStrings": [
        "\"npm:(?<depName>[^\"]+)\"\\s*=\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "npm",
      "versioningTemplate": "npm"
    }
  ]
}
