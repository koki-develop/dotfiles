{
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(mkdir:*)",

      "Bash(npm info:*)",

      "Bash(go doc:*)",
      "Bash(go list:*)",

      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(git log:*)",

      "Bash(gh run view:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr status:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",

      "Bash(actionlint:*)",
      "Bash(ghalint:*)",
      "Bash(zizmor:*)",

      "WebFetch(domain:github.com)",
      "WebFetch(domain:www.npmjs.com)",

      "mcp__github__get_me",
      "mcp__github__list_issues",
      "mcp__github__get_issue",
      "mcp__github__get_pull_request",
      "mcp__github__get_pull_request_status",

      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs"
    ],
    "deny": [
      "Read(.env*)",
      "Read(~/.ssh/**)",

      "Bash(git add .)",
      "Bash(git add -A:*)",
      "Bash(git add --all:*)",
      "Bash(git push)",

      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf /*)",
      "Bash(sudo rm:*)",
      "Bash(rm -rf .git)",

      "Bash(curl * | sh)",
      "Bash(curl * | bash)",
      "Bash(wget * | sh)",
      "Bash(wget * | bash)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e \"display notification \\\"$(jq -r '.message')\\\" with title \\\"Claude Code\\\" sound name \\\"Funk\\\"\""
          }
        ]
      }
    ]
  }
}
