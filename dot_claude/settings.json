{
  "env": {
    "DISABLE_AUTOUPDATER": "1",
    "CLAUDE_CODE_DISABLE_TERMINAL_TITLE": "1"
  },
  "permissions": {
    "allow": [
      "Bash(actionlint:*)",
      "Bash(bun list:*)",
      "Bash(find:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr status:*)",
      "Bash(gh pr view:*)",
      "Bash(gh repo view:*)",
      "Bash(gh release list:*)",
      "Bash(gh release view:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(ghalint:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git status:*)",
      "Bash(go doc:*)",
      "Bash(go fmt:*)",
      "Bash(go list:*)",
      "Bash(go vet:*)",
      "Bash(gofmt:*)",
      "Bash(goimports:*)",
      "Bash(golangci-lint run:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(npm info:*)",
      "Bash(rg:*)",
      "Bash(sort:*)",
      "Bash(test:*)",
      "Bash(wc:*)",
      "Bash(zizmor:*)",
      "WebSearch",
      "WebFetch",
      "Skill(frontend-design)",
      "Skill(validate-plan)"
    ],
    "deny": [
      "Read(.env*)",
      "Read(~/.ssh/**)",
      "Bash(git add .)",
      "Bash(git add -A:*)",
      "Bash(git add --all:*)",
      "Bash(git push)",
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf /*)",
      "Bash(sudo rm:*)",
      "Bash(rm -rf .git)"
    ]
  },
  "model": "opus",
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e \"display notification \\\"$(jq -r '.message')\\\" with title \\\"Claude Code\\\" sound name \\\"Funk\\\"\""
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bunx ccusage@latest statusline"
  },
  "enabledPlugins": {
    "pr-review-toolkit@claude-plugins-official": true
  },
  "language": "Japanese",
  "alwaysThinkingEnabled": true,
  "promptSuggestionEnabled": false
}
